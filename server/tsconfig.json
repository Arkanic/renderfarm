{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "outDir": "./server-build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "/node_modules",
    ],
    "include": [
        "./server",
    ]
}